#!/bin/bash

# This will check tresorit status and output the results to dwm status

STATUS=$(tresorit-cli status | grep 'Tresorit daemon' | awk '{print $3}')

COLORUP=98971a
COLORDOWN=ff0000

if [ $STATUS = 'running' ]
then
    # echo -e "^c#$COLORUP^^d^"
    echo -e 
else
    # echo -e "^c#$COLORDOWN^^d^"
    echo -e 
fi
